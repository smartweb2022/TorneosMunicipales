@page
@model Frontend.Pages.EscenarioIndexModel
@{
    ViewData["Title"]= "EscenarioIndex";
}
<h1>Lista de Escenarios</h1>
<p> 
    <a asp-page= "CreateEscenario"> Crear Escenario</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th> Id </th>   
            <th> Nombre </th>
            <th> Direccion </th>
        </tr>
    </thead>
    <tbody>

        
        @foreach (var Escenario in Model.Escenarios)
        {
        <tr>
            <td> @Escenario.Id </td>
            <td> @Escenario.Nombre </td>
            <td> @Escenario.Direccion </td>
            @*
            <td>
                <a asp-page="./EditEscenario" asp-route-id="@Escenario.Id">Editar</a>
                <a asp-page="./DeleteEscenario"asp-route-id="@Escenario.Id">Eliminar</a>
                <a asp-page="./DetailsEscenario"asp-route-id="@Escenario.Id">Detalles</a>
            </td>
            *@
        </tr>
        }
        
    </tbody>
</table>

