@page
@model Frontend.Pages.DetailsEscenarioModel
@{
    ViewData["Title"]="DetailsEscenario";
}

<h1>Detalles Escenario</h1>
<h3>@ViewData["Mensaje"]</h3>
<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                
                <input type="hidden" asp-for="Escenario.Id" >
                
                 <div class="form-group">
                    <label asp-for="Escenario.Nombre" readonly class="control-label"></label>
                    <input asp-for="Escenario.Nombre" readonly class="form-control"/>
                </div>

                <div class="form-group">
                    <label asp-for="Escenario.Direccion" readonly class="control-label"></label>
                    <input asp-for="Escenario.Direccion" readonly class="form-control"/>
                </div>
                <div class="form-group">
                    <label asp-for="Escenario.Telefono" readonly class="control-label"></label>
                    <input asp-for="Escenario.Telefono" readonly class="form-control"/>
                </div> 
                <div class="form-group">
                    <label asp-for="Escenario.Horario" readonly class="control-label"></label>
                    <input asp-for="Escenario.Horario" readonly class="form-control"/>
                </div>
        
                <div class="form-group">
                    <label asp-for="Escenario.TorneoId" readonly class="control-label"></label>
                    <input asp-for="Escenario.TorneoId" readonly class="form-control"/>
                </div>
               
                
            </form>
        </div>
    </div>
    <div>
        <a asp-page="EscenarioIndex">Atrás</a>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

