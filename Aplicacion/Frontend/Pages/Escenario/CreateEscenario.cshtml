@page
@model Frontend.Pages.CreateEscenarioModel
@{
    ViewData["Title"]= "CreateEscenario";
}


<h1>Crear Escenario</h1>

<h3>@ViewData["Mensaje"]</h3>

<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div> </div>
                    <div class="form-group">
                        <label asp-for="Escenario.Nombre" class="control-label"></label>
                        <input asp-for="Escenario.Nombre" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Escenario.Direccion" class="control-label">Disciplina</label>
                        <input asp-for="Escenario.Direccion" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Escenario.Telefono" class="control-label"></label>
                        <input asp-for="Escenario.Telefono" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Escenario.Horario" class="control-label"></label>
                        <input asp-for="Escenario.Horario" class="form-control"/>
                    </div>
                    <div class="form-group">
                        <label asp-for="Escenario.TorneoId" class="control-label"></label>
                        <input asp-for="Escenario.TorneoId" class="form-control"/>
                    </div>                                       
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary"/>
                    </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="EscenarioIndex">Atrás</a>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}

