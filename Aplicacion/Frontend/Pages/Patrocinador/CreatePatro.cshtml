@page
@model Frontend.Pages.CreatePatroModel
@{
    ViewData["Title"]= "CreatePatro";
}
<h1>Crear Patrocinador</h1>

<h3>@ViewData["Mensaje"]</h3>

<div class="form-horizontal">
    <hr />
    <div class="row">
        <div class="col-md-4">
            <form method="post">
                <div> </div>
                    <div class="form-group">
                        <label asp-for="Patrocinador.Identificacion" class="control-label"></label>
                        <input asp-for="Patrocinador.Identificacion" class="form-control"/>
                        <label asp-for="Patrocinador.Nombre" class="control-label"></label>
                        <input asp-for="Patrocinador.Nombre" class="form-control"/>
                        <label asp-for="Patrocinador.TipoPersona" class="control-label"></label>
                        <input asp-for="Patrocinador.TipoPersona" class="form-control"/>
                        <label asp-for="Patrocinador.Direccion" class="control-label"></label>
                        <input asp-for="Patrocinador.Direccion" class="form-control"/>
                        <label asp-for="Patrocinador.Telefono" class="control-label"></label>
                        <input asp-for="Patrocinador.Telefono" class="form-control"/>               
                    </div>                    
                    <div class="form-group">
                        <input type="submit" value="Crear" class="btn btn-primary"/>
                    </div>
            </form>
        </div>
    </div>
    <div>
        <a asp-page="IndexPatro">Atrás</a>
    </div>
</div>
@section Scripts
{
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}